#include <stdio.h>
#include <stdlib.h>

int main() {
  int a, b;
  float c;
  
  printf("digite um numero inteiro: ");
  scanf("%d",&a);
  printf("digite outro inteiro: ");
  scanf("%d",&b);
  printf("digite um numero real: ");
  scanf("%f",&c);
  printf( "\n o resultado do doplo do primeiro com a metade do segundo :%.2d", (2*a)*(b/2));
  printf( "\n o resultado do tripo do primeiro com a soma do terceiro :%.2f", 3*a+c);
  printf("\n o terceiro elevado ao cubo :%.2f", c*c*c);
    return 0;
}
